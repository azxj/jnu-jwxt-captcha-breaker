{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs", // generate `require(...)`
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "target": "ES2018",
    "types": ["node", "jest"] // supported by @types/*
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
